<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPcrudMVC_Student</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gestion des étudiants</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Students</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            CRUD
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Student" asp-action="Create">Ajouter</a>
                            <a class="dropdown-item" href="#">Supprimer</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Editer</a>
                            <a class="dropdown-item" href="#">Détail</a>
                        </div>
                    </li>                    
                </ul>
                <form class="form-inline my-2 my-lg-0" method="get" asp-controller="Student" asp-action="Index" >
                    <input class="form-control mr-sm-4" type="search" placeholder="Entrez un nom ou CIN..." value="@ViewData["getstudentdetails"]" name="Stdsearch" style="width: 254px;">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search">Chercher</button>
                </form>
            </div>
        </nav>


    </header> <br /> <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> <br /> <br />

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CoreCrudMVCtest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
